<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">





    <android.support.v7.widget.CardView
        android:layout_marginTop="30dp"
        style="@style/order_cardView_style">

      <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/bg_white"
            android:layout_gravity="center"
            android:textColor="@color/bg_yellow"
            android:text="选择提现方式"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <include layout="@layout/line_gray"/>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:background="@color/bg_white"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_withdraw_wechat"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/wechat_withdraw"
                    android:text="微信提现"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/line_color" />
            <LinearLayout
                android:id="@+id/ll_withdraw_alipay"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/icon_alipay"
                    android:text="支付宝提现"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_withdraw_phone"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:text="话费提现"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:drawablePadding="20dp"
        android:drawableLeft="@mipmap/voice"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:textColor="@color/bg_yellow"
        android:text="请按照提现引导流程完成操作即可完成提现"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
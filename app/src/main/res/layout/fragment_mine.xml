<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">






    <!--文章收益记录-->
    <RelativeLayout
        android:id="@+id/rv_balance_account"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_balance_account"
            style="@style/mine_left_img"
            app:srcCompat="@mipmap/img_balance"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_balance_account"
            style="@style/mine_text"
            android:layout_toRightOf="@+id/iv_balance_account"
            android:text="文章收益记录" />

        <ImageView
            android:id="@+id/iv_balance_account_arrow_right"
            style="@style/mine_right_img"
            app:srcCompat="@mipmap/arrow_right" />

    </RelativeLayout>

    <include layout="@layout/line_gray"/>



    <!--收徒奖励记录-->
    <RelativeLayout
        android:id="@+id/rl_my_commission"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_my_commission"
            style="@style/mine_left_img"
            app:srcCompat="@mipmap/img_balance" />

        <TextView
            android:id="@+id/tv_my_commission"
            style="@style/mine_text"
            android:layout_toRightOf="@+id/iv_my_commission"
            android:text="收徒奖励记录" />

        <ImageView
            android:id="@+id/iv_my_commission_arrow_right"
            style="@style/mine_right_img"
            app:srcCompat="@mipmap/arrow_right" />

    </RelativeLayout>



    <include layout="@layout/line_gray"/>
    <!--徒弟提成收益记录-->
    <RelativeLayout
        android:id="@+id/rl_commission_withdraw"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_commission_withdraw"
            style="@style/mine_left_img"
            app:srcCompat="@mipmap/img_balance" />

        <TextView
            android:id="@+id/tv_commission_withdraw"
            style="@style/mine_text"
            android:layout_toRightOf="@+id/iv_commission_withdraw"
            android:text="徒弟提成收益记录" />

        <ImageView
            android:id="@+id/iv_commission_withdraw_arrow_right"
            style="@style/mine_right_img"
            app:srcCompat="@mipmap/arrow_right" />

    </RelativeLayout>


    <include layout="@layout/line_gray"/>
    <!--收徒记录-->
    <RelativeLayout
        android:id="@+id/rl_invoice"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_invoice"
            style="@style/mine_left_img"
            app:srcCompat="@mipmap/img_balance" />

        <TextView
            android:id="@+id/tv_invoice"
            style="@style/mine_text"
            android:layout_toRightOf="@+id/iv_invoice"
            android:text="收徒记录" />

        <ImageView
            android:id="@+id/iv_invoice_arrow_right"
            style="@style/mine_right_img"
            app:srcCompat="@mipmap/arrow_right" />

    </RelativeLayout>


    <include layout="@layout/line_gray"/>
    <!--提现记录-->
    <RelativeLayout
        android:id="@+id/rl_service"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_service"
            style="@style/mine_left_img"
            app:srcCompat="@mipmap/img_balance" />

        <TextView
           style="@style/mine_text"
            android:layout_toRightOf="@+id/iv_service"
            android:text="提现记录" />

        <ImageView
            android:id="@+id/iv_service_arrow_right"
         style="@style/mine_right_img"
            app:srcCompat="@mipmap/arrow_right" />

    </RelativeLayout>



    <include layout="@layout/line_gray"/>
    <!--排行榜-->
    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_share"
            style="@style/mine_left_img"
            app:srcCompat="@mipmap/img_balance" />

        <TextView
            android:layout_toRightOf="@+id/iv_share"
            android:text="排行榜"
            android:id="@+id/tv_share"
            style="@style/mine_text" />

        <ImageView
            android:id="@+id/iv_share_arrow_right"
            style="@style/mine_right_img"
            app:srcCompat="@mipmap/arrow_right" />

    </RelativeLayout>
    <include layout="@layout/line_gray"/>


</LinearLayout>
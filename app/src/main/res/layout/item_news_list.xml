<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_id"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="0.3dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/bg_white"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:transitionName="shareView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="10dp">


        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/item_project_list_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/sp_16"
                tools:text="【开源完整项目开源完整项目开源完整项目开源完整项目】diycode客户【开源完整项目】diycode客户【开源完整项目】diycode客户端" />

            <TextView
                android:drawablePadding="2dp"
                android:drawableLeft="@mipmap/time"
                android:id="@+id/tv_time"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="12sp"
                tools:text="" />



            <TextView
                android:layout_alignTop="@+id/tv_price"
                android:drawableLeft="@mipmap/eyes"
                android:id="@+id/tv_watch_sum"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="@dimen/sp_12"
                tools:text="123456" />

            <com.hanks.htextview.rainbow.RainbowTextView
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_time"
                android:layout_toLeftOf="@id/tv_watch_sum"
                android:id="@+id/tv_price"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="12sp"
                tools:text="0.150元/条" />
        </RelativeLayout>
        <ImageView
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:id="@+id/item_project_list_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:contentDescription="@null"
            android:src="@mipmap/ad_error" />
    </LinearLayout>

</android.support.v7.widget.CardView>
